<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:backgroundTint">@color/cardview_shadow_start_color</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
    </style>

    <style name="StyleTextHint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
    </style>

</resources>
