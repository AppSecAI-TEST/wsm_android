<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.setting.SettingProfileViewModel"
            />
        <import type="android.view.View"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@color/color_green"
                android:drawableLeft="@{@drawable/ic_notifications}"
                android:drawablePadding="@dimen/dp_10"
                android:drawableStart="@{@drawable/ic_notifications}"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="@string/notification_settings"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_5"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/layout_icon_check"
                        android:layout_toStartOf="@+id/layout_icon_check"
                        android:gravity="center_vertical"
                        android:text="@string/receive_notification_or_email"
                        style="@style/StyleText"
                        />
                    <LinearLayout
                        android:id="@+id/layout_icon_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_10"
                            android:tint="@color/color_green"
                            app:srcCompat="@drawable/ic_notifications"
                            tools:ignore="ContentDescription"
                            />
                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:tint="@color/color_green"
                            app:srcCompat="@drawable/ic_email"
                            tools:ignore="ContentDescription"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_margin="@dimen/dp_3"
                    android:background="@color/color_gray_dark"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/layout_check_all"
                        android:layout_toStartOf="@+id/layout_check_all"
                        android:gravity="center_vertical"
                        android:text="@string/receive_notification"
                        style="@style/StyleText"
                        />
                    <LinearLayout
                        android:id="@+id/layout_check_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        >
                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_10"
                            android:checked="@{viewModel.notificationAll}"
                            android:onClick="@{() -> viewModel.onNotifiAllClicked()}"
                            android:theme="@style/StyleSwitch"
                            />
                        <CheckBox
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:checked="@{viewModel.emailAll}"
                            android:onClick="@{() -> viewModel.onEmailAllClicked()}"
                            android:theme="@style/StyleSwitch"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_margin="@dimen/dp_3"
                    android:background="@color/color_gray_dark"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/layout_check_staff"
                        android:layout_toStartOf="@+id/layout_check_staff"
                        android:text="@string/notification_list"
                        style="@style/StyleText"
                        />
                    <LinearLayout
                        android:id="@+id/layout_check_staff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        >
                        <CheckBox
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_10"
                            android:checked="@={viewModel.user.setting.notificationSetting.userSpecialType}"
                            android:onClick="@{() -> viewModel.onNotifiUserClicked()}"
                            android:theme="@style/StyleSwitch"
                            />
                        <CheckBox
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:checked="@={viewModel.user.setting.emailSetting.userSpecialType}"
                            android:onClick="@{() -> viewModel.onEmailUserClicked()}"
                            android:theme="@style/StyleSwitch"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_margin="@dimen/dp_3"
                    android:background="@color/color_gray_dark"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/layout_check_group"
                        android:layout_toStartOf="@+id/layout_check_group"
                        android:text="@string/notification_Change_group"
                        style="@style/StyleText"
                        />
                    <LinearLayout
                        android:id="@+id/layout_check_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        >
                        <CheckBox
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_10"
                            android:checked="@={viewModel.user.setting.notificationSetting.group}"
                            android:onClick="@{() -> viewModel.onNotifiGroupClicked()}"
                            android:theme="@style/StyleSwitch"
                            />
                        <CheckBox
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:checked="@={viewModel.user.setting.emailSetting.group}"
                            android:onClick="@{() -> viewModel.onEmailGroupClicked()}"
                            android:theme="@style/StyleSwitch"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_margin="@dimen/dp_3"
                    android:background="@color/color_gray_dark"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/layout_check_workspace"
                        android:layout_toStartOf="@+id/layout_check_workspace"
                        android:text="@string/notification_Change_workspace"
                        style="@style/StyleText"
                        />
                    <LinearLayout
                        android:id="@+id/layout_check_workspace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        >
                        <CheckBox
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_10"
                            android:checked="@={viewModel.user.setting.notificationSetting.workspace}"
                            android:onClick="@{() -> viewModel.onNotifiWorkspaceClicked()}"
                            android:theme="@style/StyleSwitch"
                            />
                        <CheckBox
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:checked="@={viewModel.user.setting.emailSetting.workspace}"
                            android:onClick="@{() -> viewModel.onEmailWorkspaceClicked()}"
                            android:theme="@style/StyleSwitch"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
