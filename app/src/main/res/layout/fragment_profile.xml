<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.profile.ProfileViewModel"
            />

        <variable
            name="color"
            type="com.framgia.wsm.utils.binding.ColorManagers"
            />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <com.framgia.wsm.widget.CircleImageView
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_100"
                                tools:ignore="ContentDescription"
                                />
                            <com.framgia.wsm.widget.CircleImageView
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_100"
                                android:background="@drawable/border_image"
                                tools:ignore="ContentDescription"
                                />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@{viewModel.user.name}"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_17"
                            />
                    </LinearLayout>
                </android.support.design.widget.CollapsingToolbarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/color_white"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:tabMode="scrollable"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:elevation="@dimen/dp_0"
                        tools:ignore="UseCompoundDrawables"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            app:srcCompat="@drawable/ic_edit"
                            tools:ignore="ContentDescription"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@color/color_white"
                            android:gravity="center_vertical"
                            android:onClick="@{viewModel::onClickEditProfile}"
                            android:text="@string/edit_profile"
                            android:textColor="@color/color_black_transparent"
                            android:textSize="@dimen/sp_17"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:background="@color/colorPrimary"
                        />

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="UseCompoundDrawables"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            app:srcCompat="@drawable/ic_change_password"
                            tools:ignore="ContentDescription"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@color/color_white"
                            android:gravity="center_vertical"
                            android:onClick="@{viewModel::onClickChangePassword}"
                            android:text="@string/change_password"
                            android:textColor="@color/color_black_transparent"
                            android:textSize="@dimen/sp_17"
                            />
                    </LinearLayout>

                </LinearLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    >

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_80"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@color/color_black_white"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorRed}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/employee_code"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.user.code}"
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorBlue}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/employee_name"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.user.name}"
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorGreen}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/mail"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.user.email}"
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorYellow}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/company"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorBlack}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/contract_date"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.user.contractDate}"
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorCyan}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/start_probation_date"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorGreen}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/end_probation_date"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorMagentay}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/position_name"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorRed}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/individual_code"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorBlue}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/staff_type"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorGreen}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/workspaces"
                                    style="@style/StyleTitleProfile"
                                    />
                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:layoutManager="LinearLayoutManager"
                                    app:recyclerAdapter="@{viewModel.branchAdapter}"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorBlack}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/group"
                                    style="@style/StyleTitleProfile"
                                    />
                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:layoutManager="LinearLayoutManager"
                                    app:recyclerAdapter="@{viewModel.groupAdapter}"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorCyan}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/gender"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.user.gender}"
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal"
                            >
                            <com.framgia.wsm.widget.CircleView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                app:circleColor="@{color.colorYellow}"
                                />
                            <LinearLayout
                                style="@style/StyleLinearLayoutProfile"
                                >
                                <TextView
                                    android:text="@string/birday"
                                    style="@style/StyleTitleProfile"
                                    />
                                <TextView
                                    android:text="@{viewModel.user.birthday}"
                                    style="@style/StyleTextProfile"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>

    </android.support.v7.widget.CardView>

</layout>
