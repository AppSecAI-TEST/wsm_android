<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.confirmrequestoff.ConfirmRequestOffViewModel"
            />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            >
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/md_nav_back"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginStart="@dimen/dp_35"
                    android:text="@string/confirm_request_off"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button_submit"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_placeholder_user"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/employee_name"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_staff_code"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/employee_code"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_project"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/project_name"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_position_name"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/position_name"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_branch"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/branch"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_group"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/group"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@color/color_dark_gray"
                        />

                    <!--Off have salary - Company pay-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_button"
                            android:paddingBottom="@dimen/dp_3"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_3"
                            android:text="@string/off_have_salary_company_pay"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_15"
                            />

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/annual_leave"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/leave_for_child_marriage"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/leave_for_marriage"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/funeral_leave"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@color/color_dark_gray"
                        />

                    <!--Off have salary - Insurance coverage-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_button"
                            android:paddingBottom="@dimen/dp_3"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_3"
                            android:text="@string/off_have_salary_company_pay"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_15"
                            />

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/leave_for_care_of_sick_child"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/sick_leave"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/maternity_leave"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/pregnancy_examination_leave"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/miscarriage_leave"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/StyleLinearLayoutConfirmRequestOff"
                            >
                            <TextView
                                android:text="@string/leave_for_care_of_sick_child"
                                style="@style/StyleTextConfirmRequestOff"
                                />
                            <TextView
                                style="@style/StyleTextNumberConfirmRequestOff"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_clock"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/textView"
                                android:text="@string/off_have_salary_from"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_clock"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/off_have_salary_to"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@color/color_dark_gray"
                        />

                    <!--Off no salary-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_button"
                            android:paddingBottom="@dimen/dp_3"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_3"
                            android:text="@string/off_no_salary"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_15"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                style="@style/StyleIconConfirm"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:text="@string/off_no_salary_from"
                                    style="@style/StyleTitleConfirm"
                                    />
                                <TextView
                                    style="@style/StyleTextConfirm"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                style="@style/StyleIconConfirm"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:text="@string/off_no_salary_to"
                                    style="@style/StyleTitleConfirm"
                                    />
                                <TextView
                                    style="@style/StyleTextConfirm"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_reason"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/reason"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/button_submit"
                android:text="@string/submit"
                style="@style/StyleButton"
                />

        </RelativeLayout>
    </LinearLayout>
</layout>
