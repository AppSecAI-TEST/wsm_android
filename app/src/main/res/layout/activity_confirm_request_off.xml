<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.confirmrequestoff.ConfirmRequestOffViewModel"
            />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                />
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    app:cardCornerRadius="@dimen/dp_5"
                    >

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:stretchColumns="1"
                        >

                        <TableRow
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_date_created"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/created_at"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:gravity="center_vertical"
                            android:paddingTop="@dimen/dp_10"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_placeholder_user"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/employee_name"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_staff_code"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/employee_code"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_project"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/project_name"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_group"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/position_name"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_branch"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/group"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/paid_day_off"
                                android:textColor="@color/color_black_transparent"
                                android:textSize="@dimen/sp_17"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/unpaid_day_off"
                                android:textColor="@color/color_black_transparent"
                                android:textSize="@dimen/sp_17"
                                />
                        </LinearLayout>

                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/from"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/to"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10"
                            android:textColor="@color/colorPrimary"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/off_type"
                                android:textSize="@dimen/sp_17"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/number_day_off"
                                android:textSize="@dimen/sp_17"
                                />
                        </LinearLayout>

                        <!--Type day off-->

                        <!--Company pay-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/annual_leave"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_10"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/leave_for_marriage"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_10"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/leave_for_child_marriage"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_10"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/funeral_leave"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <!--End company pay-->

                        <!--Insurance coverage-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/leave_for_care_of_sick_child"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_10"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pregnancy_examination_leave"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_10"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sick_leave"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"

                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    tools:ignore="TooManyViews"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_10"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/miscarriage_leave"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"

                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_10"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/maternity_leave"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"

                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_10"
                                >

                                <TextView
                                    android:layout_width="@dimen/dp_220"
                                    android:layout_height="wrap_content"
                                    android:text="@string/wife_labor_leave"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"

                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color_black_transparent"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <!--End insurance coverage-->

                        <!--End paid dayoff-->

                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_reason"
                                tools:ignore="ContentDescription"
                                />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reason"
                                    android:textColor="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/border_button"
                    android:text="@string/confirm_create"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_18"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
