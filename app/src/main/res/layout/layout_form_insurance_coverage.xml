<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.requestoff.RequestOffViewModel"
            />
        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{viewModel.visibleLayoutInsuranceCoverage ? View.VISIBLE : View.GONE}"
        >

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.leaveForCareOfSickChildError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/leave_for_care_of_sick_child"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.insuranceCoverage.leaveForCareOfSickChild}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.pregnancyExaminationLeaveError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/pregnancy_examination_leave"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.insuranceCoverage.pregnancyExaminationLeave}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.sickLeaveError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/sick_leave"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.insuranceCoverage.sickLeave}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.miscarriageLeaveError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/miscarriage_leave"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.insuranceCoverage.miscarriageLeave}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.maternityLeavedError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/maternity_leave"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.insuranceCoverage.maternityLeave}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.wifeLaborLeaveError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/wife_labor_leave"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.insuranceCoverage.wifeLaborLeave}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</layout>
