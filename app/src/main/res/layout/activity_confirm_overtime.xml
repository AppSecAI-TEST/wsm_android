<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.requestovertime.confirmovertime.ConfirmOvertimeViewModel"
            />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            >
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{viewModel::onCickArrowBack}"
                    android:src="@drawable/md_nav_back"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginStart="@dimen/dp_35"
                    android:text="@string/confirm_request_overtime"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button_submit"
                android:scrollbars="none"
                >
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:stretchColumns="1"
                    >
                    <TableRow
                        android:gravity="center_vertical">
                        <ImageView
                            app:srcCompat="@drawable/ic_placeholder_user"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/employee_name"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:text="@{viewModel.user.name}"
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_staff_code"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/employee_code"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:text="@{viewModel.user.code}"
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_branch"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/branch"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:text="@{viewModel.requestOverTime.branch.branchName}"
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_group"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/group"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:text="@{viewModel.requestOverTime.group.groupName}"
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_project"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/project_name"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:text="@{viewModel.requestOverTime.project}"
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_clock"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/from"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:text="@{viewModel.requestOverTime.fromTime}"
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_clock"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/to"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:text="@{viewModel.requestOverTime.toTime}"
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            app:srcCompat="@drawable/ic_reason"
                            tools:ignore="ContentDescription"
                            style="@style/StyleIconConfirm"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="@string/reason"
                                style="@style/StyleTitleConfirm"
                                />
                            <TextView
                                android:text="@{viewModel.requestOverTime.reason}"
                                style="@style/StyleTextConfirm"
                                />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </ScrollView>
            <Button
                android:id="@+id/button_submit"
                android:onClick="@{viewModel::onCickSubmit}"
                android:text="@string/submit"
                style="@style/StyleButton"
                />
        </RelativeLayout>
    </LinearLayout>
</layout>
