<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.requestovertime.confirmovertime.ConfirmOvertimeViewModel"
            />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            >
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{viewModel::onCickArrowBack}"
                    android:src="@drawable/md_nav_back"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginStart="@dimen/dp_35"
                    android:text="@string/confirm_request_overtime"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    app:cardCornerRadius="@dimen/dp_5"
                    >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:stretchColumns="1"
                        >
                        <TableRow
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_placeholder_user"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/employee_name"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.user.name}"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_staff_code"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/employee_code"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.user.code}"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_branch"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/branch"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.request.branch.branchName}"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_group"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/group"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.request.group.groupName}"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_project"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/project_name"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.request.project}"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/from"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.request.fromTime}"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_clock"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/to"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.request.toTime}"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_reason"
                                tools:ignore="ContentDescription"
                                />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_20"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reason"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.request.reason}"
                                    android:textSize="@dimen/sp_18"
                                    />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </android.support.v7.widget.CardView>
                <Button
                    android:onClick="@{viewModel::onCickSubmit}"
                    android:text="@string/submit"
                    style="@style/StyleButton"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
