<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.framgia.wsm.screen.setting.SettingProfileFragment"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.setting.SettingProfileViewModel"
            />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_update"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_7"
                app:cardCornerRadius="@dimen/dp_5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:background="@color/color_green"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableStart="@drawable/ic_group"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text="@string/default_group_and_workspace"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat,UnusedAttribute"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="@string/group"
                        android:textColor="@color/color_green"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:hint="@string/default_group"
                        android:onClick="@{() ->  viewModel.onClickGroup()}"
                        android:text="@={viewModel.currentGroup}"
                        style="@style/StyleText"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="@string/default_workspace"
                        android:textColor="@color/color_green"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:hint="@string/default_workspace"
                        android:onClick="@{() -> viewModel.onClickWorkspace()}"
                        android:text="@={viewModel.currentBranch}"

                        style="@style/StyleText"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:background="@color/color_green"
                        android:drawableLeft="@drawable/ic_notifications"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/ic_notifications"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_5"
                        android:text="@string/notification_settings"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_toLeftOf="@+id/layout_icon_check"
                                android:layout_toStartOf="@+id/layout_icon_check"
                                android:gravity="center_vertical"
                                android:text="@string/receive_notification_or_email"
                                style="@style/StyleText"
                                />
                            <LinearLayout
                                android:id="@+id/layout_icon_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent"
                                >
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_20"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:tint="@color/color_green"
                                    app:srcCompat="@drawable/ic_notifications"
                                    tools:ignore="ContentDescription"
                                    />
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:tint="@color/color_green"
                                    app:srcCompat="@drawable/ic_email"
                                    tools:ignore="ContentDescription"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_margin="@dimen/dp_3"
                            android:background="@color/color_gray_dark"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_toLeftOf="@+id/layout_check_all"
                                android:layout_toStartOf="@+id/layout_check_all"
                                android:gravity="center_vertical"
                                android:text="@string/receive_notification"
                                style="@style/StyleText"
                                />
                            <LinearLayout
                                android:id="@+id/layout_check_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                >
                                <CheckBox
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_20"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:checked="@={viewModel.setting.notifiAll}"
                                    android:onClick="@{() -> viewModel.onNotifiAllClicked()}"
                                    android:theme="@style/StyleSwitch"
                                    />
                                <CheckBox
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:checked="@={viewModel.setting.emailAll}"
                                    android:onClick="@{() -> viewModel.onEmailAllClicked()}"
                                    android:theme="@style/StyleSwitch"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_margin="@dimen/dp_3"
                            android:background="@color/color_gray_dark"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/layout_check_staff"
                                android:layout_toStartOf="@+id/layout_check_staff"
                                android:text="@string/notification_list"
                                style="@style/StyleText"
                                />
                            <LinearLayout
                                android:id="@+id/layout_check_staff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                >
                                <CheckBox
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_20"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:checked="@={viewModel.setting.notifiList}"
                                    android:onClick="@{() -> viewModel.onNotifiListClicked()}"
                                    android:theme="@style/StyleSwitch"
                                    />
                                <CheckBox
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:checked="@={viewModel.setting.emailList}"
                                    android:onClick="@{() -> viewModel.onEmailListClicked()}"
                                    android:theme="@style/StyleSwitch"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_margin="@dimen/dp_3"
                            android:background="@color/color_gray_dark"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/layout_check_group"
                                android:layout_toStartOf="@+id/layout_check_group"
                                android:text="@string/notification_Change_group"
                                style="@style/StyleText"
                                />
                            <LinearLayout
                                android:id="@+id/layout_check_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                >
                                <CheckBox
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_20"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:checked="@={viewModel.setting.notifiGroup}"
                                    android:onClick="@{() -> viewModel.onNotifiGroupClicked()}"
                                    android:theme="@style/StyleSwitch"
                                    />
                                <CheckBox
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:checked="@={viewModel.setting.emailGroup}"
                                    android:onClick="@{() -> viewModel.onEmailGroupClicked()}"
                                    android:theme="@style/StyleSwitch"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_margin="@dimen/dp_3"
                            android:background="@color/color_gray_dark"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/layout_check_workspace"
                                android:layout_toStartOf="@+id/layout_check_workspace"
                                android:text="@string/notification_Change_workspace"
                                style="@style/StyleText"
                                />
                            <LinearLayout
                                android:id="@+id/layout_check_workspace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                >
                                <CheckBox
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_20"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:checked="@={viewModel.setting.notifiWorkspace}"
                                    android:onClick="@{() -> viewModel.onNotifiWorkspaceClicked()}"
                                    android:theme="@style/StyleSwitch"
                                    />
                                <CheckBox
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:checked="@={viewModel.setting.emailWorkspace}"
                                    android:onClick="@{() -> viewModel.onEmailWorkspaceClicked()}"
                                    android:theme="@style/StyleSwitch"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <Button
            android:id="@+id/button_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_green"
            android:text="@string/update"
            android:textColor="@color/color_white"
            />
    </RelativeLayout>
</layout>
