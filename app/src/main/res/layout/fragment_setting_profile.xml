<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.framgia.wsm.screen.setting.SettingProfileFragment"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.setting.SettingProfileViewModel"
            />
    </data>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:refreshing="@{viewModel.refreshing}"
        bind:colorRes="@{@color/colorPrimary}"
        bind:onRefresh="@{viewModel::onRefresh}"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button_update"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="ObsoleteLayoutParam,ScrollViewSize"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:background="@color/color_green"
                                android:drawableLeft="@{@drawable/ic_group}"
                                android:drawablePadding="@dimen/dp_15"
                                android:drawableStart="@{@drawable/ic_group}"
                                android:gravity="center_vertical"
                                android:padding="@dimen/dp_5"
                                android:text="@string/default_group_and_workspace"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat,UnusedAttribute"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_5"
                                android:drawablePadding="@dimen/dp_5"
                                android:text="@string/default_group"
                                android:textColor="@color/color_green"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:hint="@string/default_group"
                                android:onClick="@{() ->  viewModel.onClickGroup()}"
                                android:text="@={viewModel.currentGroup}"
                                style="@style/StyleText"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:drawablePadding="@dimen/dp_5"
                                android:text="@string/default_workspace"
                                android:textColor="@color/color_green"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:hint="@string/default_workspace"
                                android:onClick="@{() -> viewModel.onClickWorkspace()}"
                                android:text="@={viewModel.currentBranch}"
                                style="@style/StyleText"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <include
                        layout="@layout/layout_from_setting_profile"
                        bind:viewModel="@{viewModel}"
                        />
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/button_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_green"
                android:onClick="@{() -> viewModel.onUpdateClicked()}"
                android:text="@string/update"
                android:textColor="@color/color_white"
                />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>
