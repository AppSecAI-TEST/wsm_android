<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.managelistrequests.ManageListRequestsViewModel"
            />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/border_button_a"
                            android:gravity="center_vertical"
                            android:hint="@string/employee_name_italic"
                            android:inputType="text"
                            android:padding="@dimen/dp_10"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_shadow_start_color"
                            android:textSize="@dimen/sp_18"
                            />
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/border_button_a"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/dp_10"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="@dimen/sp_18"
                                />
                            <ImageView
                                tools:ignore="ContentDescription"
                                style="@style/StyleImageDropDown"
                                />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/border_button_a"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/dp_10"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="@dimen/sp_18"
                                />
                            <ImageView
                                tools:ignore="ContentDescription"
                                style="@style/StyleImageDropDown"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/border_button_a"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="@dimen/dp_10"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="@dimen/sp_18"
                                />
                            <ImageView
                                tools:ignore="ContentDescription"
                                style="@style/StyleImageDropDown"
                                />
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:background="@drawable/border_textview_search"
                            android:drawableLeft="@drawable/ic_search_white"
                            android:drawableStart="@drawable/ic_search_white"
                            android:text="@string/search"
                            style="@style/StyleTextActionFilter"
                            />
                        <TextView
                            android:background="@drawable/border_textview_clear"
                            android:drawableLeft="@drawable/ic_clear_white"
                            android:drawableStart="@drawable/ic_clear_white"
                            android:text="@string/clear"
                            style="@style/StyleTextActionFilter"
                            />
                        <TextView
                            android:background="@drawable/border_textview_hide"
                            android:drawableLeft="@drawable/ic_filter"
                            android:drawableStart="@drawable/ic_filter"
                            android:text="@string/hide"
                            style="@style/StyleTextActionFilter"
                            />
                    </LinearLayout>

                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:recyclerAdapter="@{viewModel.manageListRequestsAdapter}"
            />

    </android.support.design.widget.CoordinatorLayout>


</layout>
