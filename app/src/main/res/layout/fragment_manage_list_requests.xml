<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.managelistrequests.ManageListRequestsViewModel"
            />
        <import type="android.view.View"/>

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.visibleLayoutSearch ? View.VISIBLE : View.GONE}"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/border_button_a"
                            android:gravity="center_vertical"
                            android:hint="@string/employee_name_italic"
                            android:inputType="text"
                            android:padding="@dimen/dp_7"
                            android:text="@={viewModel.userName}"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_shadow_start_color"
                            android:textSize="@dimen/sp_17"
                            />
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/border_button_a"
                            android:onClick="@{viewModel::onPickTypeStatus}"
                            >
                            <ImageView
                                tools:ignore="ContentDescription"
                                style="@style/StyleImageDropDown"
                                />
                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:hint="@string/choose_status"
                                android:padding="@dimen/dp_7"
                                android:text="@{viewModel.currentStatus}"
                                android:textColor="@color/cardview_dark_background"
                                android:textColorHint="@color/cardview_shadow_start_color"
                                android:textSize="@dimen/sp_17"
                                />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/border_button_a"
                            android:onClick="@{viewModel::onCickFromTime}"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp_7"
                                    android:layout_marginStart="@dimen/dp_7"
                                    android:gravity="center_vertical"
                                    android:text="@string/from_italic"
                                    android:textColor="@color/color_gray"
                                    android:textSize="@dimen/sp_15"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/dp_7"
                                    android:text="@{viewModel.fromTime}"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>
                            <ImageView
                                tools:ignore="ContentDescription"
                                style="@style/StyleImageDateTime"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/border_button_a"
                            android:onClick="@{viewModel::onCickToTime}"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp_7"
                                    android:layout_marginStart="@dimen/dp_7"
                                    android:gravity="center_vertical"
                                    android:text="@string/to_italic"
                                    android:textColor="@color/color_gray"
                                    android:textSize="@dimen/sp_15"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/dp_7"
                                    android:text="@{viewModel.toTime}"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </LinearLayout>
                            <ImageView
                                tools:ignore="ContentDescription"
                                style="@style/StyleImageDateTime"
                                />
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageButton
                            android:background="@drawable/border_textview_search"
                            android:onClick="@{viewModel::onClickSearch}"
                            app:srcCompat="@drawable/ic_search_white"
                            tools:ignore="ContentDescription"
                            style="@style/StyleButtonActionFilter"
                            />
                        <ImageButton
                            android:background="@drawable/border_textview_clear"
                            android:onClick="@{viewModel::onClickClearDataFilter}"
                            app:srcCompat="@drawable/ic_clear_white"
                            tools:ignore="ContentDescription"
                            style="@style/StyleButtonActionFilter"
                            />
                        <ImageButton
                            android:background="@drawable/border_textview_hide"
                            android:onClick="@{viewModel::onClickFloatingButtonSearch}"
                            app:srcCompat="@drawable/ic_filter"
                            tools:ignore="ContentDescription"
                            style="@style/StyleButtonActionFilter"
                            />
                    </LinearLayout>

                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:recyclerAdapter="@{viewModel.manageListRequestsAdapter}"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_16"
            android:clickable="true"
            android:onClick="@{viewModel::onClickFloatingButtonSearch}"
            android:tint="@color/color_white"
            app:layout_anchor="@id/recycleview"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@drawable/ic_search_white"
            />
    </android.support.design.widget.CoordinatorLayout>

</layout>
