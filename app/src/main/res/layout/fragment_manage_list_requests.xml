<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.managelistrequests.ManageListRequestsViewModel"
            />
        <import type="android.view.View"/>

    </data>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:colorRes="@{@color/colorPrimaryDark}"
        app:enableSwipe="@{viewModel.refreshEnable}"
        app:refreshing="@{viewModel.loading}"
        bind:setOnRefreshListener="@{viewModel.onRefreshListener}"
        >
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                bind:addOnOffsetChangedListener="@{viewModel.onOffsetChangedListener}"
                >

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.visibleLayoutSearch ? View.VISIBLE : View.GONE}"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_button_a"
                            android:gravity="center_vertical"
                            android:hint="@string/employee_name_italic"
                            android:inputType="text"
                            android:padding="@dimen/dp_7"
                            android:text="@={viewModel.userName}"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_shadow_start_color"
                            android:textSize="@dimen/sp_17"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_weight="1"
                                android:background="@drawable/border_button_a"
                                android:onClick="@{viewModel::onCickFromTime}"
                                >
                                <ImageView
                                    app:srcCompat="@drawable/ic_calendar"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleImageDateTime"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/dp_7"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:text="@string/from_italic"
                                        android:textColor="@color/color_gray"
                                        android:textSize="@dimen/sp_17"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:gravity="center_vertical"
                                        android:text="@{viewModel.fromTime}"
                                        android:textColor="@color/cardview_dark_background"
                                        android:textSize="@dimen/sp_17"
                                        />
                                </LinearLayout>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_weight="1"
                                android:background="@drawable/border_button_a"
                                android:onClick="@{viewModel::onCickToTime}"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/dp_7"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:text="@string/to_italic"
                                        android:textColor="@color/color_gray"
                                        android:textSize="@dimen/sp_17"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:gravity="center_vertical"
                                        android:text="@{viewModel.toTime}"
                                        android:textColor="@color/cardview_dark_background"
                                        android:textSize="@dimen/sp_17"
                                        />
                                </LinearLayout>
                                <ImageView
                                    app:srcCompat="@drawable/ic_calendar"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleImageDateTime"
                                    />
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_weight="1"
                                android:background="@drawable/border_button_a"
                                android:onClick="@{viewModel::onPickTypeStatus}"
                                android:padding="@dimen/dp_7"
                                >
                                <ImageView
                                    app:srcCompat="@drawable/ic_arrow_drop_down"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleImageDropDown"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:hint="@string/choose_status"
                                    android:text="@{viewModel.currentStatus}"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textColorHint="@color/cardview_shadow_start_color"
                                    android:textSize="@dimen/sp_17"
                                    />
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:layout_marginStart="@dimen/dp_7"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                >
                                <ImageButton
                                    android:background="@drawable/border_textview_clear"
                                    android:onClick="@{viewModel::onClickClearDataFilter}"
                                    app:srcCompat="@drawable/ic_clear_white"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleButtonActionFilter"
                                    />
                                <ImageButton
                                    android:background="@drawable/border_textview_search"
                                    android:onClick="@{viewModel::onClickSearch}"
                                    app:srcCompat="@drawable/ic_search_white"
                                    tools:ignore="ContentDescription"
                                    style="@style/StyleButtonActionFilter"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_70"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.visiableLayoutDataNotFound ? View.VISIBLE : View.GONE}"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="@dimen/dp_56"
                        app:srcCompat="@drawable/ic_not_found_data"
                        tools:ignore="ContentDescription"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/can_not_find_data"
                        android:textSize="@dimen/sp_17"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/progressBar"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/dp_10"
                        app:layoutManager="LinearLayoutManager"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:recyclerAdapter="@{viewModel.manageListRequestsAdapter}"
                        />
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="@{viewModel.showProgress ? View.VISIBLE : View.GONE}"
                        />
                </RelativeLayout>
            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_1"
                android:visibility="@{viewModel.visiableLayoutFooter ? View.VISIBLE : View.GONE}"
                app:cardCornerRadius="@dimen/dp_5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_gray_light"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical"
                        android:onClick="@{viewModel::onSelectAll}"
                        android:orientation="horizontal"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="@{viewModel.selectAll}"
                            android:onClick="@{viewModel::onSelectAll}"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:text="@{viewModel.totalRequestSelected}"
                            android:textSize="@dimen/sp_15"
                            />
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.45"
                        android:onClick="@{viewModel::onAcceptAll}"
                        app:srcCompat="@drawable/ic_accept_all"
                        tools:ignore="ContentDescription"
                        />
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.45"
                        android:background="@color/color_green_dark"
                        android:onClick="@{viewModel::onClickFloatingButtonSearch}"
                        app:srcCompat="@drawable/ic_search_white"
                        tools:ignore="ContentDescription"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </android.support.design.widget.CoordinatorLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>
