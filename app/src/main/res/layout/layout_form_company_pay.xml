<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.requestoff.RequestOffViewModel"
            />
        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{viewModel.visibleLayoutCompanyPay ? View.VISIBLE : View.GONE}"
        >

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.annualError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/annual_leave"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.companyPay.annualLeave}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.leaveForMarriageError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/leave_for_marriage"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.companyPay.leaveForMarriage}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.leaveForChildMarriageError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/leave_for_child_marriage"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.companyPay.leaveForChildMarriage}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            bind:errorText="@{viewModel.funeralLeaveError}"
            bind:viewModel="@{viewModel}"
            style="@style/StyleTextHint"
            >

            <EditText
                android:hint="@string/funeral_leave"
                android:inputType="numberDecimal"
                android:text="@={viewModel.requestOff.companyPay.funeralLeave}"
                style="@style/StyleEditableText"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</layout>
