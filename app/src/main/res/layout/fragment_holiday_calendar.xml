<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.holidaycalendar.HolidayCalendarViewModel"
            />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/relative_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >
            <ImageButton
                android:id="@+id/button_previous_year"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:background="@drawable/md_transparent"
                android:scaleType="centerCrop"
                android:tint="@color/color_white"
                app:srcCompat="@drawable/ic_menu_left"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/button_previous_year"
                android:layout_toLeftOf="@+id/button_next_year"
                android:layout_toRightOf="@+id/button_previous_year"
                android:layout_toStartOf="@+id/button_next_year"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                />
            <ImageButton
                android:id="@+id/button_next_year"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/md_transparent"
                android:scaleType="centerCrop"
                android:tint="@color/color_white"
                app:srcCompat="@drawable/ic_menu_right"
                tools:ignore="ContentDescription"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linear_footer"
            android:layout_below="@+id/relative_control"
            />
        <LinearLayout
            android:id="@+id/linear_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/dp_3"
            >
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/circle_company_holiday"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/company_holiday"
                android:textColor="@color/color_white"
                />
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/circle_normal_holiday"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/normal_holiday"
                android:textColor="@color/color_white"
                />
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/circle_weekend_holiday"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/saturday_sunday"
                android:textColor="@color/color_white"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>
