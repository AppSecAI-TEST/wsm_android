<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.wsm.screen.holidaycalendar.HolidayCalendarViewModel"
            />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:id="@+id/button_previous_year"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/md_transparent"
            android:scaleType="centerCrop"
            android:tint="@color/color_white"
            app:srcCompat="@drawable/ic_menu_left"
            tools:ignore="ContentDescription"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/button_previous_year"
            android:layout_toLeftOf="@+id/button_next_year"
            android:layout_toRightOf="@+id/button_previous_year"
            android:layout_toStartOf="@+id/button_next_year"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold"
            />
        <ImageButton
            android:id="@+id/button_next_year"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/md_transparent"
            android:scaleType="centerCrop"
            android:tint="@color/color_white"
            app:srcCompat="@drawable/ic_menu_right"
            tools:ignore="ContentDescription"
            />
    </RelativeLayout>
</layout>
